<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolbarTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/toolbarTitleColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_size_xlarge</item>
    </style>

    <style name="DetailText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_xxxlarge</item>
    </style>

</resources>
